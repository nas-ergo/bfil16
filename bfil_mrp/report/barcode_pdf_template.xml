<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id = 'lot_barcode_report_pdf'>
        <t t-call = "web.basic_layout">
            <t t-foreach="docs" t-as="data">
                <p style="text-align:center; font-size: 20px;" >Product : <span t-field="data.product_id.name" style="font-size: 20px;"/></p>
                <div style="text-align:center;">
                    <img style="padding-bottom: 15pt" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', data.qr_code, 170, 170)"/>
                </div>

                <p style="text-align:center; font-size: 20px;">LOT Number : <span t-field="data.name" style="font-size: 20px;"/></p>

            </t>
        </t>
    </template>
</odoo>